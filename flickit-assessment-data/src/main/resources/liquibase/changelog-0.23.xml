<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                                       http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.17.xsd">

    <changeSet id="0.23-01" author="Ali Sedaghat">
        <renameTable oldTableName="account_user" newTableName="fau_user"/>
    </changeSet>

    <changeSet id="0.23-02" author="Ali Sedaghat">
        <sql>alter table fau_user rename constraint account_user_pkey to pk_fau_user;</sql>
    </changeSet>

    <changeSet id="0.23-03" author="Ali Sedaghat">
        <dropColumn tableName="fau_user" columnName="current_space_id"/>
    </changeSet>

    <changeSet id="0.23-04" author="Ali Sedaghat">
        <dropColumn tableName="fau_user" columnName="default_space_id"/>
    </changeSet>

    <changeSet id="0.23-05" author="Ali Sedaghat">
        <dropUniqueConstraint tableName="fau_user" constraintName="account_user_email_key"/>
    </changeSet>

    <changeSet id="0.23-06" author="Ali Sedaghat">
        <addUniqueConstraint tableName="fau_user" columnNames="email" constraintName="uq_fauuser_email"/>
    </changeSet>

</databaseChangeLog>
