    </changeSet>

    <changeSet id="0.8-03" author="Mahdi Rezazadeh">
        <update tableName="baseinfo_assessmentsubject">
            <column name="code" valueComputed="REGEXP_REPLACE(title, '[^a-zA-Z0-9]', '', 'g')"/>
        </update>
    </changeSet>

