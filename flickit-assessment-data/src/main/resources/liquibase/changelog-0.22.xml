<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                                       http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.17.xsd">

    <changeSet id="0.22-01" author="Mahdi Rezazadeh">
        <sql>
            INSERT INTO fac_assessment_user_role (assessment_id, user_id, role_id)
            SELECT a.id        AS assessment_id,
                   sp.owner_id AS user_id,
                   3           AS role_id
            FROM fac_assessment a
                     JOIN fau_space sp ON a.space_id = sp.id
            ON CONFLICT (assessment_id, user_id)
            DO UPDATE SET role_id = EXCLUDED.role_id;
        </sql>
    </changeSet>

    <changeSet id="0.22-02" author="Mahdi Rezazadeh">
        <createTable tableName="fac_answer_au">
            <column name="id" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="REV" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="REVTYPE" type="smallint">
                <constraints nullable="false"/>
            </column>
            <column name="answer_option_id" type="bigint"/>
            <column name="confidence_level_id" type="tinyint"/>
            <column name="is_not_applicable" type="boolean"/>
            <column name="last_modified_by" type="uuid"/>
        </createTable>
    </changeSet>

    <changeSet id="0.22-03" author="Mahdi Rezazadeh">
        <addPrimaryKey columnNames="id, REV" constraintName="pk_fac_answer_au" tableName="fac_answer_au"/>
    </changeSet>

    <changeSet id="0.22-04" author="Mahdi Rezazadeh">
        <createTable tableName="revinfo">
            <column name="id" type="bigint">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="timestamp" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="last_modification_time" type="${datetime_with_time_zone_type}"/>
        </createTable>
    </changeSet>

    <changeSet id="0.22-05" author="Mahdi Rezazadeh">
        <createSequence sequenceName="revinfo_seq" incrementBy="50"/>
    </changeSet>
</databaseChangeLog>
