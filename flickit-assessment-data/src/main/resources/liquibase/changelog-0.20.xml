<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                                       http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.17.xsd">

    <changeSet id="0.20-01" author="Mahdi Rezazadeh">
        <createTable tableName="fac_assessment_user_role">
            <column name="assessment_id" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="role_id" type="int">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="0.20-02" author="Mahdi Rezazadeh">
        <addPrimaryKey tableName="fac_assessment_user_role"
                       columnNames="assessment_id, user_id"
                       constraintName="pk_fac_assessment_user_role"/>
    </changeSet>

    <changeSet id="0.20-03" author="Mahdi Rezazadeh">
        <addForeignKeyConstraint baseTableName="fac_assessment_user_role"
                                 baseColumnNames="assessment_id"
                                 referencedTableName="fac_assessment"
                                 referencedColumnNames="id"
                                 constraintName="fk_fac_assessment_user_role_assessment"
                                 deferrable="true" initiallyDeferred="true" onDelete="CASCADE"
                                 validate="true"/>
    </changeSet>

    <changeSet id="0.20-04" author="Mahdi Rezazadeh">
        <dropForeignKeyConstraint baseTableName="fak_answer_option_impact"
                                  constraintName="fak_answeroptionimpact_answeroption"/>
    </changeSet>

    <changeSet id="0.20-05" author="Mahdi Rezazadeh">
        <dropPrimaryKey tableName="fak_answer_option"/>
    </changeSet>

    <changeSet id="0.20-06" author="Mahdi Rezazadeh">
        <addPrimaryKey tableName="fak_answer_option"
                       columnNames="id, kit_version_id"
                       constraintName="pk_fak_answer_option"/>
    </changeSet>

    <changeSet id="0.20-07" author="Mahdi Rezazadeh">
        <addColumn tableName="fak_answer_option_impact">
            <column name="kit_version_id" type="bigint"
                    valueComputed="fak_answer_option.kit_version_id FROM fak_answer_option WHERE fak_answer_option.id = option_id">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>

    <changeSet id="0.20-08" author="Mahdi Rezazadeh">
        <addForeignKeyConstraint baseTableName="fak_answer_option_impact"
                                 baseColumnNames="option_id, kit_version_id"
                                 constraintName="fak_answeroptionimpact_answeroption"
                                 referencedTableName="fak_answer_option"
                                 referencedColumnNames="id, kit_version_id"
                                 deferrable="true"
                                 initiallyDeferred="true"
                                 onDelete="CASCADE"/>
    </changeSet>

    <changeSet id="0.20-09" author="Mahdi Rezazadeh">
        <dropForeignKeyConstraint baseTableName="fak_question_impact"
                                  constraintName="fk_fak_questionimpact_attribute"/>
    </changeSet>

    <changeSet id="0.20-10" author="Mahdi Rezazadeh">
        <dropPrimaryKey tableName="fak_attribute"/>
    </changeSet>

    <changeSet id="0.20-11" author="Mahdi Rezazadeh">
        <addPrimaryKey tableName="fak_attribute"
                       columnNames="id, kit_version_id"
                       constraintName="pk_fak_attribute"/>
    </changeSet>

    <changeSet id="0.20-12" author="Mahdi Rezazadeh">
        <addColumn tableName="fak_question_impact">
            <column name="kit_version_id" type="bigint"
                    valueComputed="fak_attribute.kit_version_id FROM fak_attribute WHERE fak_attribute.id = attribute_id">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>

    <changeSet id="0.20-13" author="Mahdi Rezazadeh">
        <addForeignKeyConstraint baseTableName="fak_question_impact"
                                 baseColumnNames="attribute_id, kit_version_id"
                                 constraintName="fk_fak_questionimpact_attribute"
                                 referencedTableName="fak_attribute"
                                 referencedColumnNames="id, kit_version_id"
                                 deferrable="true"
                                 initiallyDeferred="true"
                                 onDelete="CASCADE"/>
    </changeSet>
</databaseChangeLog>
