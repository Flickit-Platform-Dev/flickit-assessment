<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                                       http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.17.xsd">

    <changeSet id="0.19-01" author="Mahdi Rezazadeh">
        <createTable tableName="fau_user_assessment_role">
            <column name="assessment_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="role_id" type="int">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="0.19-02" author="Mahdi Rezazadeh">
        <addPrimaryKey tableName="fau_user_assessment_role"
                       columnNames="assessment_id, user_id"/>
    </changeSet>

    <changeSet id="0.19-03" author="Mahdi Rezazadeh">
        <addForeignKeyConstraint baseTableName="fau_user_assessment_role"
                                 baseColumnNames="user_id"
                                 referencedTableName="account_user"
                                 referencedColumnNames="id"
                                 constraintName="fk_fau_user_assessment_role_account_user"
                                 deferrable="true" initiallyDeferred="true" onDelete="CASCADE"
                                 validate="true"/>
    </changeSet>
</databaseChangeLog>
