<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                                       http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.17.xsd">


    <changeSet id="0.10-1" author="MKouhestani">
        <addColumn tableName="baseinfo_assessmentkit">
            <column name="is_private" type="boolean" defaultValueBoolean="false"/>
        </addColumn>
    </changeSet>

    <changeSet id="0.10-02" author="Mahdi Rezazadeh">
        <createTable tableName="fak_kit_user_access">
            <column name="kit_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="uuid">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="0.10-03" author="Mahdi Rezazadeh">
        <addPrimaryKey tableName="fak_kit_user_access"
                             columnNames="kit_id, user_id"/>
    </changeSet>

    <changeSet id="0.10-04" author="Mahdi Rezazadeh">
        <addForeignKeyConstraint baseTableName="fak_kit_user_access"
                                 baseColumnNames="kit_id"
                                 referencedTableName="baseinfo_assessmentkit"
                                 referencedColumnNames="id"
                                 constraintName="fk_fak_kit_user_access_assessmentkit"
                                 deferrable="true" initiallyDeferred="true" onDelete="CASCADE"
                                 validate="true"/>
    </changeSet>

    <changeSet id="0.10-05" author="Mahdi Rezazadeh">
        <addForeignKeyConstraint baseTableName="fak_kit_user_access"
                                 baseColumnNames="user_id"
                                 referencedTableName="account_user"
                                 referencedColumnNames="id"
                                 constraintName="fk_fak_kit_user_access_account_user"
                                 deferrable="true" initiallyDeferred="true" onDelete="CASCADE"
                                 validate="true"/>
    </changeSet>

    <changeSet id="0.10-06" author="MKouhestani">
        <addNotNullConstraint tableName="baseinfo_assessmentkit" columnName="expert_group_id"/>
    </changeSet>

    <changeSet id="0.10-20" author="MKouhestani">
        <addColumn tableName="fac_evidence">
            <column name="last_modified_by_id" type="uuid"/>
        </addColumn>
    </changeSet>

    <changeSet id="0.10-21" author="MKouhestani">
        <addForeignKeyConstraint baseTableName="fac_evidence"
                                 baseColumnNames="created_by_id"
                                 referencedTableName="account_user"
                                 referencedColumnNames="id"
                                 constraintName="fk_fac_evidence_account_user_created_by"/>
    </changeSet>

    <changeSet id="0.10-22" author="MKouhestani">
        <addForeignKeyConstraint baseTableName="fac_evidence"
                                 baseColumnNames="last_modified_by_id"
                                 referencedTableName="account_user"
                                 referencedColumnNames="id"
                                 constraintName="fk_fac_evidence_account_user_last_modified_by_id"/>
    </changeSet>

    <changeSet id="0.10-23" author="MKouhestani">
        <sql>UPDATE fac_evidence SET last_modified_by_id = (SELECT fac_assessment.created_by FROM fac_assessment WHERE
            fac_assessment.id = fac_evidence.assessment_id)
        </sql>
    </changeSet>

    <changeSet id="0.10-24" author="MKouhestani">
        <addNotNullConstraint columnName="last_modified_by_id"
                              constraintName="last_modified_by_id_not_null"
                              tableName="fac_evidence"/>
    </changeSet>

</databaseChangeLog>
