<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                                       http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.17.xsd">


    <changeSet id="0.10-1" author="MKouhestani">
        <addColumn tableName="baseinfo_assessmentkit">
            <column name="is_private" type="boolean" defaultValueBoolean="false"/>
        </addColumn>
    </changeSet>

    <changeSet id="0.10-02" author="MKouhestani">
        <addColumn tableName="fac_assessment">
            <column name="created_by" type="uuid"/>
            <column name="last_modified_by" type="uuid"/>
        </addColumn>
    </changeSet>

    <changeSet id="0.10-03" author="MKouhestani">
        <sql>UPDATE fac_assessment SET created_by = (SELECT account_space.owner_id FROM account_space WHERE fac_assessment.space_id = account_space.id)</sql>
    </changeSet>

    <changeSet id="0.10-04" author="MKouhestani">
        <sql>UPDATE fac_assessment SET last_modified_by = (SELECT account_space.owner_id FROM account_space WHERE fac_assessment.space_id = account_space.id)</sql>
    </changeSet>

    <changeSet id="0.10-05" author="MKouhestani">
        <addNotNullConstraint columnDataType="uuid"
                              columnName="created_by"
                              constraintName="created_by_not_null"
                              tableName="fac_assessment"/>
    </changeSet>

    <changeSet id="0.10-06" author="MKouhestani">
        <addNotNullConstraint columnDataType="uuid"
                              columnName="last_modified_by"
                              constraintName="last_modified_by_not_null"
                              tableName="fac_assessment"/>
    </changeSet>

</databaseChangeLog>
