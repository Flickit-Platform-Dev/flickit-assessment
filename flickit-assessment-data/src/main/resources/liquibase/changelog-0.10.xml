<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                                       http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.17.xsd">


    <changeSet id="0.10-1" author="MKouhestani">
        <addColumn tableName="baseinfo_assessmentkit">
            <column name="is_private" type="boolean" defaultValueBoolean="false"/>
        </addColumn>
    </changeSet>

    <changeSet id="0.10-02" author="Mahdi Rezazadeh">
        <createTable tableName="baseinfo_assessmentkit_account_user">
            <column name="assessment_kit_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="uuid">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="0.10-03" author="Mahdi Rezazadeh">
        <addUniqueConstraint tableName="baseinfo_assessmentkit_account_user"
                             columnNames="assessment_kit_id, user_id"
                             constraintName="uq_baseinfo_assessmentkit_account_user_kit_user"/>
    </changeSet>

</databaseChangeLog>
