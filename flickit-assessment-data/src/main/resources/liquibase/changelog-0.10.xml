<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                                       http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.17.xsd">


    <changeSet id="0.10-1" author="MKouhestani">
        <addColumn tableName="baseinfo_assessmentkit">
            <column name="is_private" type="boolean" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>

    <changeSet id="0.10-2" author="MKouhestani">
        <addNotNullConstraint tableName="baseinfo_assessmentkit" columnName="expert_group_id"/>
    </changeSet>

    <changeSet id="0.10-3" author="MKouhestani">
        <modifyDataType tableName="baseinfo_assessmentkit" columnName="expert_group_id" newDataType="bigint"/>
    </changeSet>

    <changeSet id="0.10-4" author="MKouhestani">
        <addForeignKeyConstraint baseTableName="baseinfo_expertgroup"
                                 baseColumnNames="owner_id"
                                 referencedTableName="account_user"
                                 referencedColumnNames="id"
                                 constraintName="fk_baseinfo_expertgroup_account_user"/>
    </changeSet>

</databaseChangeLog>
