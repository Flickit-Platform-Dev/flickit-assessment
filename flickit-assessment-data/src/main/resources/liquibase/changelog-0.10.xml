<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                                       http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.17.xsd">


    <changeSet id="0.10-1" author="MKouhestani">
        <addColumn tableName="baseinfo_assessmentkit">
            <column name="is_private" type="boolean" defaultValueBoolean="false"/>
        </addColumn>
    </changeSet>

    <changeSet id="0.10-02" author="Mahdi Rezazadeh">
        <createTable tableName="fak_kit_user_access">
            <column name="kit_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="uuid">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="0.10-03" author="Mahdi Rezazadeh">
        <addPrimaryKey tableName="fak_kit_user_access"
                             columnNames="kit_id, user_id"/>
    </changeSet>

    <changeSet id="0.10-04" author="Mahdi Rezazadeh">
        <addForeignKeyConstraint baseTableName="fak_kit_user_access"
                                 baseColumnNames="kit_id"
                                 referencedTableName="baseinfo_assessmentkit"
                                 referencedColumnNames="id"
                                 constraintName="fk_fak_kit_user_access_assessmentkit"
                                 deferrable="true" initiallyDeferred="true" onDelete="CASCADE"
                                 validate="true"/>
    </changeSet>

    <changeSet id="0.10-05" author="Mahdi Rezazadeh">
        <addForeignKeyConstraint baseTableName="fak_kit_user_access"
                                 baseColumnNames="user_id"
                                 referencedTableName="account_user"
                                 referencedColumnNames="id"
                                 constraintName="fk_fak_kit_user_access_account_user"
                                 deferrable="true" initiallyDeferred="true" onDelete="CASCADE"
                                 validate="true"/>
    </changeSet>

    <changeSet id="0.10-06" author="MKouhestani">
        <addColumn tableName="fac_assessment">
            <column name="created_by" type="uuid"/>
            <column name="last_modified_by" type="uuid"/>
        </addColumn>
    </changeSet>

    <changeSet id="0.10-07" author="MKouhestani">
        <addForeignKeyConstraint baseTableName="fac_assessment"
                                 baseColumnNames="created_by"
                                 referencedTableName="account_user"
                                 referencedColumnNames="id"
                                 constraintName="fk_fac_assessment_account_user_created_by"/>
    </changeSet>

    <changeSet id="0.10-08" author="MKouhestani">
        <addForeignKeyConstraint baseTableName="fac_assessment"
                                 baseColumnNames="last_modified_by"
                                 referencedTableName="account_user"
                                 referencedColumnNames="id"
                                 constraintName="fk_fac_assessment_account_user_last_modified_by"/>
    </changeSet>

    <changeSet id="0.10-09" author="MKouhestani">
        <sql>UPDATE fac_assessment SET created_by = (SELECT account_space.owner_id FROM account_space WHERE fac_assessment.space_id = account_space.id)</sql>
    </changeSet>

    <changeSet id="0.10-10" author="MKouhestani">
        <sql>UPDATE fac_assessment SET last_modified_by = (SELECT account_space.owner_id FROM account_space WHERE fac_assessment.space_id = account_space.id)</sql>
    </changeSet>

    <changeSet id="0.10-11" author="MKouhestani">
        <addNotNullConstraint columnName="created_by"
                              constraintName="created_by_not_null"
                              tableName="fac_assessment"/>
    </changeSet>

    <changeSet id="0.10-12" author="MKouhestani">
        <addNotNullConstraint columnName="last_modified_by"
                              constraintName="last_modified_by_not_null"
                              tableName="fac_assessment"/>
    </changeSet>

</databaseChangeLog>
