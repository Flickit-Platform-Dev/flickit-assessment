<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                                       http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.17.xsd">

    <changeSet id="create-assessment-assessment-table" author="MKouhestani">
        <createTable tableName="assessment_assessment">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="assessment_kit_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="code" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="creation_time" type="timestamp(6)">
                <constraints nullable="false"/>
            </column>
            <column name="last_modification_date" type="timestamp(6)">
                <constraints nullable="false"/>
            </column>
            <column name="space_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="title" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="color_id" type="integer"/>
        </createTable>

        <addUniqueConstraint tableName="assessment_assessment"
                             columnNames="code, space_id"
                             constraintName="ukgvtgd1wbx1d0wsac10g9jmab9"/>
    </changeSet>

    <changeSet id="create-assessment-assessmentresult-table" author="MKouhestani">
        <createTable tableName="assessment_assessmentresult">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="assessment_id" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="maturity_level_id" type="bigint"/>
            <column name="is_valid" type="boolean"/>
        </createTable>

        <addForeignKeyConstraint baseTableName="assessment_assessmentresult"
                                 baseColumnNames="assessment_id"
                                 constraintName="fk_assessmentresult_assessment"
                                 referencedTableName="assessment_assessment"
                                 referencedColumnNames="id"/>
    </changeSet>

    <changeSet id="create-assessment-evidence-table" author="MKouhestani">
        <createTable tableName="assessment_evidence">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="created_by_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="creation_time" type="timestamp(6)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="last_modification_date" type="timestamp(6)">
                <constraints nullable="false"/>
            </column>
            <column name="question_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="assessment_id" type="uuid">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="assessment_evidence"
                                 baseColumnNames="assessment_id"
                                 constraintName="fk_assessment_evidence_assessment"
                                 referencedTableName="assessment_assessment"
                                 referencedColumnNames="id"/>

    </changeSet>

    <changeSet id="create-assessment-qualityattributevalue-table" author="MKouhestani">
        <createTable tableName="assessment_qualityattributevalue">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="maturity_level_id" type="bigint"/>
            <column name="quality_attribute_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="assessment_result_id" type="uuid">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="assessment_qualityattributevalue"
                                 baseColumnNames="assessment_result_id"
                                 constraintName="fk_assessmentqualityattributevalue_assessmentresult"
                                 referencedTableName="assessment_assessmentresult"
                                 referencedColumnNames="id"/>
    </changeSet>

    <changeSet id="create-assessment-answer-table" author="MKouhestani">
        <createTable tableName="assessment_answer">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="answer_option_id" type="bigint"/>
            <column name="question_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="assessment_result_id" type="uuid">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="assessment_answer"
                                 baseColumnNames="assessment_result_id"
                                 constraintName="fk_assessment_answer_assessmentresult"
                                 referencedTableName="assessment_assessmentresult"
                                 referencedColumnNames="id"/>

    </changeSet>

    <changeSet id="create-assessment-subject-value-table" author="MKouhestani">
        <createTable tableName="assessment_assessmentsubjectvalue">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="assessment_result_id" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="assessment_subject_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="maturity_level_id" type="bigint"/>
        </createTable>

        <addForeignKeyConstraint baseTableName="assessment_assessmentsubjectvalue"
                                 baseColumnNames="assessment_result_id"
                                 constraintName="fk_assessmentsubjectvalue_assessmentresult"
                                 referencedTableName="assessment_assessmentresult"
                                 referencedColumnNames="id"
                                 onDelete="CASCADE"/>
    </changeSet>
</databaseChangeLog>
